<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/bubble_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble_other"
        android:padding="10dp"
        android:layout_gravity="start"
        android:layout_marginEnd="48dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />
        <ImageButton
            android:id="@+id/btn_speak_other"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="Speak"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:tint="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bubble_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble_me"
        android:padding="10dp"
        android:layout_gravity="end"
        android:layout_marginStart="48dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textIsSelectable="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_speak_me"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:contentDescription="Speak"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:tint="@android:color/white" />
            <ImageButton
                android:id="@+id/btn_edit_me"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_btn"
                android:contentDescription="Edit"
                android:enabled="true"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_edit"
                android:alpha="1.0"
                android:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
